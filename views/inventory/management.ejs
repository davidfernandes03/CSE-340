<head>
    <link rel="stylesheet" href="/css/account.css">
</head>

<% if (message) { %>
    <p class="flash-message"><%= message %></p>
<% } %>

<main class="manage">
    <h1><%= title %></h1>
  
    <ul class="add-items">
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-inventory">Add New Item to Inventory</a></li>
    </ul>

    <h2>Manage Inventory</h2>
    <p>Select a classification to view the vehicles.</p>

    <form>
        <label for="classificationList">Classification:</label>
        <%- classificationSelect %>
    </form>

    <table id="inventoryDisplay"></table>
    <noscript>JavaScript must be enable to use this page.</noscript>

    <script src="../../js/inventory.js" defer></script>
</main>
